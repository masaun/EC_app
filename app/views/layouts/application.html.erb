<!DOCTYPE html>
<html>
<head>
  <title>EC_app</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page.title || "pragmatic Bookshelf" %>
  </div>

  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      </div>

      <ul>
        <li><a herf="#">ホーム</a></li>
        <li><a herf="#">よくある質問</a></li>
        <li><a herf="#">ニュース</a></li>
        <li><a herf="#">お問い合わせ</a></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
